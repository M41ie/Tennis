page{background:#f5f5f5;}
.friend-item{display:flex;align-items:center;background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);padding:20rpx;margin:12rpx;}
.left{display:flex;align-items:center;margin-right:20rpx;}
.avatar{width:60rpx;height:60rpx;border-radius:50%;background:#ccc;margin-right:12rpx;}
.name{font-size:28rpx;font-weight:600;color:#333;}
.grid{flex:1;display:flex;flex-direction:column;}
.row{display:flex;justify-content:space-around;}
.cell{text-align:center;font-size:24rpx;color:#666;flex:1;}
.icon{font-size:40rpx;line-height:1;margin-bottom:4rpx;}
.empty{text-align:center;color:#999;padding:40rpx 0;}
