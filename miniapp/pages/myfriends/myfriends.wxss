page{background:#f5f5f5;}
.friend-item{display:flex;align-items:center;background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);padding:20rpx;margin:12rpx;}
.left{display:flex;align-items:center;}
.avatar{width:80rpx;height:80rpx;border-radius:50%;background:#ccc;margin-right:16rpx;}
.name{font-size:28rpx;font-weight:600;color:#333;}
.stats{flex:1;display:flex;flex-direction:column;margin-left:40rpx;}
.stat-row{display:flex;align-items:center;margin-bottom:8rpx;}
.stat-row:last-child{margin-bottom:0;}
.icon{font-size:40rpx;margin-right:12rpx;}
.text{font-size:24rpx;color:#666;}
.rate{font-size:24rpx;color:#666;margin-left:auto;}
.empty{text-align:center;color:#999;padding:40rpx 0;}
