page{background:#f5f5f5;}
.friend-item{display:flex;align-items:center;background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);padding:20rpx;margin:12rpx;}
.left{display:flex;align-items:center;}
.avatar{width:70rpx;height:70rpx;border-radius:50%;background:#ccc;margin-right:16rpx;}
.name{font-size:28rpx;font-weight:400;color:#333;}
.summary{margin:20rpx 12rpx 24rpx;color:#333;font-size:30rpx;font-weight:500;}
.stats{flex:1;display:flex;justify-content:flex-end;margin-left:0;}
.col{display:flex;flex-direction:column;align-items:center;}
.col:first-child{margin-left:40rpx;}
.col+.col{margin-left:60rpx;}
.icon{font-size:26rpx;margin-bottom:8rpx;}
.text{font-size:24rpx;color:#666;}
.rate{font-size:24rpx;color:#666;margin-top:4rpx;}
.score{font-size:24rpx;margin-top:4rpx;}
.pos{color:green;}
.neg{color:red;}
.neutral{color:gray;}
.empty{text-align:center;color:#999;padding:40rpx 0;}
