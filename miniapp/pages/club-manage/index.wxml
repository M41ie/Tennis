<view class="page-container">
  <view class="search-bar-container">
    <input class="search-input" placeholder="搜索俱乐部" />
  </view>

  <view class="club-list">
    <view wx:for="{{myClubs}}" wx:key="id" class="club-card" bindtap="goToManage" data-id="{{item.id}}">
      <view class="card-left">
        <view class="club-name">{{item.name}}</view>
        <view class="club-slogan">{{item.slogan}}</view>
        <view class="club-stats">
          <text>成员: {{item.stats.member_count}}</text>
          <text>单打: {{item.stats.singles_rating_range[0]}}-{{item.stats.singles_rating_range[1]}}</text>
          <text>总双打: {{item.stats.total_doubles_matches}} 场</text>
        </view>
      </view>
      <view class="card-right">
        <text class="club-role">{{item.role}}</text>
      </view>
    </view>
  </view>
</view>
