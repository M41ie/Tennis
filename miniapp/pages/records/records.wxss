.tab-bar{
  display:flex;
  background:#fff;
  border-bottom:1px solid #eee;
}
.tab-item{
  flex:1;
  padding:20rpx 0;
  text-align:center;
  font-size:28rpx;
  color:#666;
}
.tab-item.active{
  color:#07C160;
  border-bottom:4rpx solid #07C160;
}
.mode-switch{display:flex;background:#f7f7f7;margin:10rpx;border-radius:32rpx;overflow:hidden;}
.mode-item{flex:1;padding:12rpx 0;text-align:center;font-size:28rpx;color:#333;}
.mode-item.active{background:#07C160;color:#fff;}
.list{padding:10px;}
.action-bar{padding:20rpx;border-top:1px solid #eee;font-size:24rpx;color:#666;}
.action-bar .button-group{display:flex;flex-wrap:wrap;gap:8rpx;margin-top:10rpx;}
.action-bar .status-text{margin-bottom:6rpx;}
.action-btn{}
.pos{color:green;font-size:24rpx;}
.neg{color:red;font-size:24rpx;}
.neutral{color:gray;font-size:24rpx;}
.fab{
  position:fixed;
  bottom:80rpx;
  right:40rpx;
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  background:#07C160;
  color:#fff;
  font-size:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  box-shadow:0 8rpx 16rpx rgba(0,0,0,0.3);
  z-index:999;
}
