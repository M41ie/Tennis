.item { padding: 10px 0; border-bottom: 1px solid #ddd; }

.btn-wrapper{
  display:flex;
  flex-direction:column;
  align-items:center;
  padding:32rpx 0;
  background:#fff;
}
.record-btn{
  width:80%;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
  border-radius:12rpx;
  margin-bottom:24rpx;
}
.record-btn.primary{
  background:#07C160;
  color:#fff;
  border:none;
}
.record-btn.secondary{
  background:#fff;
  color:#333;
  border:2rpx solid #d9d9d9;
}

.pos{color:green;font-size:24rpx;}
.neg{color:red;font-size:24rpx;}
.neutral{color:gray;font-size:24rpx;}
