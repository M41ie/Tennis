<view class="filters">
  <picker mode="selector" value="0" bindchange="onClubChange" range="{{clubOptions}}">
    <view class="weui-cell">Club: {{clubOptions[clubIndex]}}</view>
  </picker>
  <picker mode="selector" value="{{ratingIndex}}" bindchange="onRatingChange" range="{{ratingOptions}}">
    <view class="weui-cell">{{ratingOptions[ratingIndex]}}</view>
  </picker>
  <input class="weui-input" type="number" placeholder="Min Rating" bindinput="onMinRating" />
  <input class="weui-input" type="number" placeholder="Max Rating" bindinput="onMaxRating" />
  <input class="weui-input" type="number" placeholder="Min Age" bindinput="onMinAge" />
  <input class="weui-input" type="number" placeholder="Max Age" bindinput="onMaxAge" />
  <input class="weui-input" placeholder="Gender" bindinput="onGender" />
</view>
<view class="weui-list">
  <block wx:for="{{players}}" wx:key="user_id">
    <view class="weui-list__item item" bindtap="viewPlayer" data-id="{{item.user_id}}" data-cid="{{item.club_id || clubOptions[clubIndex]}}">
      <image class="avatar" src="{{item.avatar}}" mode="aspectFill"></image>
      <text style="flex:1">{{item.name}}: {{item.rating}}</text>
    </view>
  </block>
</view>
