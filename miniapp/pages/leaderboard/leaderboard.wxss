.filter-bar{display:flex;white-space:nowrap;overflow-x:auto;background:#fff;}
.filter-item{padding:10rpx 24rpx;font-size:26rpx;color:#666;}
.filter-item.active{color:#07C160;border-bottom:4rpx solid #07C160;}
.mode-switch{display:flex;background:#f7f7f7;margin:15rpx 10rpx 10rpx;border-radius:32rpx;overflow:hidden;}
.mode-item{flex:1;padding:12rpx 0;text-align:center;font-size:28rpx;color:#333;}
.mode-item.active{background:#07C160;color:#fff;}
.player-card{display:flex;align-items:center;background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);padding:20rpx;margin:12rpx;}
.rank{width:40rpx;text-align:center;font-size:28rpx;font-weight:600;margin-right:20rpx;color:#333;}
.avatar{width:60rpx;height:60rpx;border-radius:50%;margin-right:20rpx;background:#ccc;}
.info{flex:1;display:flex;flex-direction:column;}
.name{font-size:28rpx;font-weight:600;color:#333;}
.meta{font-size:24rpx;color:#666;margin-top:4rpx;}
.score{font-size:32rpx;font-weight:bold;color:#333;text-align:right;}
.skeleton-card .skeleton-box{background:#eee;}
.skeleton-circle{background:#eee;}
.skeleton-box{height:24rpx;border-radius:12rpx;flex-shrink:0;}
.skeleton-card .rank{width:40rpx;height:24rpx;margin-right:20rpx;}
.skeleton-card .avatar{width:60rpx;height:60rpx;border-radius:50%;margin-right:20rpx;}
.skeleton-card .name{width:160rpx;margin-bottom:12rpx;}
.skeleton-card .meta{width:220rpx;height:20rpx;}
.skeleton-card .score{width:60rpx;height:24rpx;}
.skeleton-list{padding-top:10rpx;}
.empty{text-align:center;color:#999;padding:40rpx 0;}
