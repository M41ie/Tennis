<view class="weui-cells weui-cells_form">
  <picker mode="selector" range="{{clubOptions}}" value="{{clubIndex}}" bindchange="onClubChange">
    <view class="weui-cell">Club: {{clubOptions[clubIndex]}}</view>
  </picker>
  <picker mode="selector" range="{{modeOptions}}" value="{{modeIndex}}" bindchange="onModeChange">
    <view class="weui-cell">{{modeOptions[modeIndex]}}</view>
  </picker>
  <block wx:if="{{modeIndex == 0}}">
    <picker mode="selector" range="{{playerNames}}" value="{{opponentIndex}}" bindchange="onOpponentChange">
      <view class="weui-cell">Opponent: {{playerNames[opponentIndex]}}</view>
    </picker>
  </block>
  <block wx:else>
    <picker mode="selector" range="{{playerNames}}" value="{{a1Index}}" bindchange="onA1Change">
      <view class="weui-cell">A1: {{playerNames[a1Index]}}</view>
    </picker>
    <picker mode="selector" range="{{playerNames}}" value="{{a2Index}}" bindchange="onA2Change">
      <view class="weui-cell">A2: {{playerNames[a2Index]}}</view>
    </picker>
    <picker mode="selector" range="{{playerNames}}" value="{{b1Index}}" bindchange="onB1Change">
      <view class="weui-cell">B1: {{playerNames[b1Index]}}</view>
    </picker>
    <picker mode="selector" range="{{playerNames}}" value="{{b2Index}}" bindchange="onB2Change">
      <view class="weui-cell">B2: {{playerNames[b2Index]}}</view>
    </picker>
  </block>
  <picker mode="date" value="{{date}}" bindchange="onDateChange">
    <view class="weui-cell">Date: {{date}}</view>
  </picker>
  <view class="weui-cell">
    <view class="weui-label">Location</view>
    <input class="weui-input" placeholder="Location" bindinput="onLocation" />
  </view>
  <picker mode="selector" range="{{formatOptions}}" value="{{formatIndex}}" bindchange="onFormatChange">
    <view class="weui-cell">Format: {{formatOptions[formatIndex]}}</view>
  </picker>
  <view class="weui-cell">
    <view class="weui-label">Your Score</view>
    <input class="weui-input" type="number" placeholder="Score" bindinput="onScoreA" />
  </view>
  <view class="weui-cell">
    <view class="weui-label">Opponent</view>
    <input class="weui-input" type="number" placeholder="Score" bindinput="onScoreB" />
  </view>
</view>
<button class="weui-btn weui-btn_primary" bindtap="submit">Submit</button>
