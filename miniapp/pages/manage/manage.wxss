page{background:#f5f5f5}
.club-header{padding:24rpx;background:#fff;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);margin-bottom:24rpx}
.club-header .top{display:flex;justify-content:space-between;align-items:flex-start}
.club-name{font-size:36rpx;font-weight:600;color:#333}
.role{font-size:28rpx;margin-left:16rpx}
.role-tag.leader{color:#007aff}
.role-tag.admin{color:#1aad19}
.role-tag.member{color:#999}
.club-slogan{font-size:28rpx;color:#888;margin-top:8rpx}
.club-stats{font-size:24rpx;color:#666;margin-top:8rpx;display:flex;flex-direction:column;gap:6rpx}
.section{margin:0 24rpx 24rpx 24rpx}
.section-title{font-size:30rpx;color:#333;margin-bottom:16rpx}
.card{background:#fff;border-radius:12rpx;padding:24rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.04);margin-bottom:16rpx;display:flex;justify-content:space-between;align-items:center}
.pending-name{font-size:28rpx;color:#333}
.pending-info{display:flex;flex-direction:column;gap:4rpx}
.pending-reason{font-size:24rpx;color:#666}
.primary-btn{background:#07C160;color:#fff;border-radius:8rpx;padding:12rpx 24rpx;font-size:26rpx}
.player-card{display:flex;align-items:center;background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);padding:20rpx;margin:12rpx}
.player-card .avatar{width:60rpx;height:60rpx;border-radius:50%;margin-right:20rpx;background:#ccc}
.player-card .info{flex:1;display:flex;flex-direction:column}
.player-card .name{font-size:28rpx;font-weight:600;color:#333}
.player-card .meta{font-size:24rpx;color:#666;margin-top:4rpx}
.player-card .score{font-size:32rpx;font-weight:bold;color:#333;text-align:right}
.operation-bar{display:flex;flex-wrap:wrap;gap:16rpx;margin:20rpx}
.op-btn{flex:1;background:#07C160;color:#fff;border-radius:8rpx;padding:12rpx 0;font-size:28rpx}
.op-btn.danger{background:#e03a3a}

.dialog-mask{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(0,0,0,.4);display:flex;justify-content:center;align-items:center;z-index:1000}
.dialog-card{background:#fff;padding:40rpx 30rpx;border-radius:16rpx;width:90%;box-sizing:border-box}
.dialog-title{text-align:center;font-size:30rpx;margin-bottom:24rpx}
.dialog-input{width:100%;height:80rpx;line-height:80rpx;margin-bottom:24rpx;padding:0 24rpx;border:1rpx solid #ccc;border-radius:8rpx;box-sizing:border-box;font-size:30rpx}
.dialog-actions{display:flex;justify-content:space-between;gap:20rpx}
.dialog-actions button{flex:1;height:80rpx;line-height:80rpx;background:#07C160;color:#fff;border-radius:8rpx;font-size:30rpx}
.dialog-actions button:nth-child(2){background:#ccc;color:#fff}
