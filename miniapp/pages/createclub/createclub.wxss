.weui-cell { align-items: center; }
.image-preview { width: 100px; height: 100px; }
.picker { padding: 10rpx 0; color: #888; }
.create-btn {
  width: 75%;
  margin: 8px auto;
}

.dialog-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.dialog-card {
  background: #fff;
  padding: 40rpx 30rpx;
  border-radius: 16rpx;
  width: 90%;
  box-sizing: border-box;
}

.dialog-title {
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 24rpx;
}

.dialog-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 24rpx;
  padding: 0 24rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.dialog-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.dialog-actions button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #07C160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.dialog-actions button:nth-child(2) {
  background: #ccc;
  color: #fff;
}
