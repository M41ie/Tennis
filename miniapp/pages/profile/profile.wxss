page{background:#f5f5f5;}
.login-block{text-align:center;padding:40rpx;}
.menu-list{background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);margin:12rpx 24rpx;overflow:hidden;}
.menu-item{display:flex;align-items:center;padding:24rpx;font-size:32rpx;color:#333;border-bottom:1px solid #eee;}
.menu-item:last-child{border-bottom:none;}
.menu-item.disabled{color:#bbb;}
.rating-tip{
  margin:0 24rpx 12rpx 24rpx;
  padding:12rpx;
  background:#fff8cc;
  color:#664600;
  font-size:24rpx;
  text-align:center;
  border-radius:8rpx;
}
.contact-btn{
  background:none;
  border:none;
  width:100%;
  text-align:left;
  padding:24rpx;
  margin:0;
  line-height:inherit;
}
.icon{width:36rpx;height:36rpx;margin-right:16rpx;}
.title{flex:1;}
.arrow{
  color:#bbb;
  font-size:44rpx;
}
.logout-btn{margin:40rpx 24rpx 0 24rpx;background:#fff;color:#e03a3a;border:none;}
