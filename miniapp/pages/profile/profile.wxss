page{background:#f5f5f5}
.user-card{
  display:flex;align-items:center;
  padding:32rpx;background:#fff;border-radius:12rpx;
  margin:24rpx 24rpx 0 24rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.04);
}
.avatar{width:120rpx;height:120rpx;border-radius:50%}
.login-tip{margin-left:32rpx;font-size:28rpx;color:#666}
.info{margin-left:32rpx}
.name{font-size:32rpx;font-weight:600}
.uid,.rating{font-size:26rpx;color:#888;margin-top:8rpx}

.hint-card{
  margin:24rpx;background:#fff3cd;border-radius:12rpx;
  padding:24rpx;font-size:26rpx;color:#856404
}

.menu-list{margin:24rpx 24rpx 0 24rpx;display:flex;flex-direction:column;gap:24rpx}
.menu-item{
  display:flex;align-items:center;justify-content:center;
  height:88rpx;background:#fff;border-radius:12rpx;font-size:28rpx;
  box-shadow:0 6rpx 12rpx rgba(0,0,0,.04)
}
.menu-item .icon{width:36rpx;height:36rpx;margin-right:16rpx}
.menu-item:nth-child(1){color:#fff;background:#07C160}
.menu-item.disabled{color:#bbb}
