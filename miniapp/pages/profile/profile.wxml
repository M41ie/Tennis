<view wx:if="{{loggedIn}}">
  <profile-card user="{{user}}" placeholder="{{placeholderAvatar}}" bind:edit="editProfile" />
</view>
<view wx:else class="login-block">
  <button class="weui-btn weui-btn_primary" bindtap="toLogin">登录</button>
  <button class="weui-btn" bindtap="toRegister">注册</button>
</view>

<view class="menu-list">
  <view class="menu-item" bindtap="goMyClub">
    <image class="icon" src="{{iconClub}}" />
    <view class="title">{{myClubBtnText}}</view>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item disabled">
    <image class="icon" src="{{iconComing}}" />
    <view class="title">敬请期待</view>
  </view>
</view>

<button wx:if="{{loggedIn}}" class="logout-btn" bindtap="logout">退出登录</button>
