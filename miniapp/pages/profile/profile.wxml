<profile-card
  user="{{user}}"
  placeholder="{{placeholderAvatar}}"
  editable="false"
  info="{{'ID: ' + user.id}}"
  bind:cardtap="onCardTap"
/>

<view class="menu-list">
  <view wx:if="{{loggedIn}}" class="menu-item" bindtap="goMyClub">
    <image class="icon" src="{{iconClub}}" />
    <view class="title">{{myClubBtnText}}</view>
    <text class="arrow">›</text>
  </view>
  <view wx:else class="menu-item disabled">
    <image class="icon" src="{{iconClub}}" />
    <view class="title">{{myClubBtnText}}</view>
    <text class="arrow">›</text>
  </view>
  <view class="menu-item disabled">
    <image class="icon" src="{{iconComing}}" />
    <view class="title">我的笔记（Coming Soon）</view>
  </view>
</view>

<button wx:if="{{loggedIn}}" class="logout-btn" bindtap="logout">退出登录</button>
