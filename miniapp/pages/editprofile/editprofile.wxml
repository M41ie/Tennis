<view class="weui-cells weui-cells_form">
  <view class="weui-cell">
    <view class="weui-label">Name</view>
    <input class="weui-input" value="{{name}}" placeholder="Name" bindinput="onName" />
  </view>
  <view class="weui-cell">
    <view class="weui-label">Age</view>
    <input class="weui-input" type="number" value="{{age}}" placeholder="Age" bindinput="onAge" />
  </view>
  <view class="weui-cell">
    <view class="weui-label">Gender</view>
    <input class="weui-input" value="{{gender}}" placeholder="Gender" bindinput="onGender" />
  </view>
</view>
<button class="weui-btn weui-btn_primary" bindtap="submit">保存</button>
