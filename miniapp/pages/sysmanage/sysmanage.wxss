.page-container { padding: 24rpx; }
.tab-bar { display: flex; background: #fff; border-bottom: 1px solid #eee; }
.tab-item { flex: 1; text-align: center; padding: 20rpx 0; color: #666; }
.tab-item.active { color: #07C160; border-bottom: 4rpx solid #07C160; }
.search-row { display: flex; align-items: center; margin: 20rpx 0; }
.search-input { flex: 1; border: 1px solid #ccc; padding: 10rpx; border-radius: 4rpx; margin-right: 10rpx; }
.dashboard { display: flex; gap: 20rpx; margin-bottom: 20rpx; }
.card { flex: 1; background: #f7f7f7; padding: 20rpx; text-align: center; border-radius: 8rpx; }
.section-title { font-size: 30rpx; color: #333; margin: 20rpx 0 10rpx; }
.chart-section { background: #fafafa; border-radius: 8rpx; margin-bottom: 20rpx; padding: 20rpx; }
.chart-controls { display: flex; gap: 20rpx; margin-bottom: 10rpx; }
.chart-controls button.active { background: #07C160; color: #fff; }
.chart-canvas { width: 100%; height: 200rpx; }
.rank-list { background: #fafafa; border-radius: 8rpx; padding: 20rpx; }
.club-card { width: 100%; background: #fff; border-radius: 16rpx; margin-bottom: 20rpx; padding: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05); display: flex; justify-content: space-between; box-sizing: border-box; }
.card-left { display: flex; flex-direction: column; flex-grow: 1; padding-right: 20rpx; }
.club-name { font-size: 36rpx; font-weight: bold; color: #333; margin-bottom: 10rpx; }
.club-slogan { font-size: 26rpx; color: #888; margin-bottom: 20rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.club-stats { font-size: 24rpx; color: #666; display: flex; flex-direction: column; }
.club-stats text { margin-bottom: 6rpx; }
.empty { text-align: center; color: #999; padding: 20rpx 0; }
