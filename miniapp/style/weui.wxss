.weui-btn {
  display: block;
  width: 100%;
  padding: 12px 0;
  margin: 10px 0;
  text-align: center;
  border-radius: 5px;
  box-sizing: border-box;
}
.weui-btn_primary {
  background-color: #1aad19;
  color: #fff;
}
.weui-btn_disabled {
  background-color: #f7f7f7;
  color: #c8c9cc;
}
.weui-cell {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}
.weui-label {
  width: 80px;
  color: #888;
}
.weui-input {
  flex: 1;
}
.weui-cells {
  background-color: #fff;
  margin-top: 5px;
}
.weui-cells_form .weui-cell {
  border-bottom: 1px solid #eee;
}
.weui-list {
  padding: 0;
}
.weui-list .weui-list__item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #eee;
}
