.record-card{background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);margin:12rpx;overflow:hidden;}
.header{display:flex;justify-content:space-between;align-items:center;padding:20rpx;border-bottom:1px solid #eee;font-size:26rpx;}
.date{color:#888;font-size:24rpx;}
.format{font-weight:600;color:#333;font-size:28rpx;}
.location{display:flex;align-items:center;color:#888;font-size:24rpx;}
.location .icon{margin-right:4rpx;}
.row{display:flex;align-items:center;padding:20rpx;border-bottom:1px solid #eee;}
.row:last-child{border-bottom:none;}
.info{flex:1;display:flex;align-items:center;flex-wrap:nowrap;}
.info.singles{margin-left:120rpx;} /* Increased from 60rpx */
.info.doubles{justify-content:flex-start; margin-left:120rpx;} /* Added margin-left */
.unit{display:flex;align-items:center;margin-right:10rpx;flex:1 0 auto;width:50%;}
.unit:last-child{margin-right:0;}
.record-card .avatar{width:48rpx;height:48rpx;border-radius:50%;margin-right:12rpx;background:#ccc;flex-shrink:0;}
.record-card .name{color:#333;font-size:26rpx;max-width:120rpx;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}
.record-card .score{width:100rpx;margin-right:20rpx;margin-left:35rpx;text-align:center;font-size:48rpx;font-weight:700;color:#000;}
.record-card .rating{margin-left:8rpx;font-size:26rpx;color:#333;}
.record-card .delta{font-size:22rpx;margin-left:8rpx;}
.pos{color:#2f8f2f;}
.neg{color:#e03a3a;}
.neutral{color:gray;}
.action-bar{padding:20rpx;border-top:1px solid #eee;font-size:24rpx;color:#666;}
.action-bar .button-group{display:flex;flex-wrap:wrap;gap:8rpx;margin-top:10rpx;}
.action-bar .status-text{margin-bottom:6rpx;}
