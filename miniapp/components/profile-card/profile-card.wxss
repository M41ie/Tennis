.profile-card{position:relative;display:flex;align-items:center;padding:24rpx;margin:24rpx;background:#fff;border-radius:12rpx;box-shadow:0 6rpx 12rpx rgba(0,0,0,.05);}
.avatar{width:100rpx;height:100rpx;border-radius:50%;background:#ccc;flex-shrink:0;}
.info{flex:1;margin-left:24rpx;display:flex;flex-direction:column;}
.name-row{display:flex;align-items:center;}
.name{font-size:36rpx;font-weight:600;color:#333;}
.role-tag{font-size:24rpx;margin-left:16rpx;}
.role-tag.leader{color:#007aff;}
.role-tag.admin{color:#1aad19;}
.role-tag.member{color:#999;}
.meta{font-size:24rpx;color:#888;margin-top:6rpx;}
.meta2{font-size:24rpx;color:#888;margin-top:2rpx;}
.stats{display:flex;flex-shrink:0;margin-left:auto;text-align:left;}
.col{margin-left:32rpx;}
.title{font-size:24rpx;color:#000;}
.rating{font-size:24rpx;color:#888;margin-top:4rpx;}
.games{font-size:24rpx;color:#888;margin-top:2rpx;}
.edit{position:absolute;top:20rpx;right:20rpx;font-size:28rpx;color:#666;}
