.page-container { padding: 20rpx; }
.empty { text-align: center; color: #999; padding: 40rpx 0; }
.profile-skeleton {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,.05);
}
.profile-skeleton::before {
  content: '';
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
}
.profile-skeleton::after {
  content: '';
  flex: 1;
  height: 24rpx;
  margin-left: 24rpx;
  background: #eee;
  border-radius: 12rpx;
}
