.page-container{padding:20rpx;background:#f5f5f5;min-height:100vh;}
.section-title{margin:20rpx 0 10rpx 0;font-size:30rpx;font-weight:bold;}
.club-list{}
.club-card{width:100%;background:#fff;border-radius:16rpx;margin-bottom:20rpx;padding:24rpx;box-shadow:0 4rpx 12rpx rgba(0,0,0,0.05);display:flex;justify-content:space-between;box-sizing:border-box;}
.card-left{display:flex;flex-direction:column;flex-grow:1;padding-right:20rpx;}
.club-name{font-size:36rpx;font-weight:bold;color:#333;margin-bottom:10rpx;}
.club-slogan{font-size:26rpx;color:#888;margin-bottom:20rpx;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.club-stats{font-size:24rpx;color:#666;display:flex;flex-direction:column;}
.club-stats text{margin-bottom:6rpx;}
.card-right{flex-shrink:0;display:flex;align-items:flex-start;}
.club-role{font-size:26rpx;}
.role-tag.leader{color:#007aff;}
.role-tag.admin{color:#1aad19;}
.role-tag.member{color:#999;}
.primary-btn{background:#07C160;color:#fff;border-radius:8rpx;padding:12rpx 0;font-size:28rpx;margin:10rpx 0;}
.dialog-mask{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(0,0,0,.4);display:flex;justify-content:center;align-items:center;z-index:1000;}
.dialog-card{background:#fff;padding:40rpx 30rpx;border-radius:16rpx;width:90%;box-sizing:border-box;}
.dialog-title{text-align:center;font-size:30rpx;margin-bottom:24rpx;}
.edit-row{display:flex;justify-content:space-between;align-items:center;margin-bottom:20rpx;}
.edit-row input{border:1rpx solid #ccc;border-radius:8rpx;padding:10rpx;width:200rpx;text-align:right;}
.mode-switch{display:flex;background:#f7f7f7;margin:10rpx;border-radius:32rpx;overflow:hidden;}
.mode-item{flex:1;padding:12rpx 0;text-align:center;font-size:28rpx;color:#333;}
.mode-item.active{background:#07C160;color:#fff;}
.empty{text-align:center;color:#999;padding:20rpx 0;}
